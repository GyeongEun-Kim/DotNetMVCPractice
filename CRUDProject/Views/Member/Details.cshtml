@using BusinessLayer.DTO
@model MemberDTO

@{
    ViewData["Title"] = "Details";
    Layout = null;
}
<style>
    .btn {
        background-color: lightskyblue;
        margin:10px;
    }

    table {
        border: 1px solid black;
        text-align: center;
        border-collapse: collapse;
    }

        table th, table td {
            border: 1px solid black;
            padding: 5px;
        }

    th {
        background-color: lightskyblue;
    }

</style>
<h2>회원 상세 정보</h2>
<hr />
<table>
    <tr>
        <th>이름</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>회사명</th>
        <td>@Model.Company</td>
    </tr>
    <tr>
        <th>직급</th>
        <td>@Model.Grade</td>
    </tr>
    <tr>
        <th>연령대</th>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <th>등록일시</th>
        <td>@Model.CreDateTime</td>
    </tr>
    <tr>
        <th>수정일시</th>
        <td>@Model.ModDateTime</td>
    </tr>
</table>

<div>
    <button type="button" class="btn" onclick="window.location.href='/'">목록으로</button>
</div>